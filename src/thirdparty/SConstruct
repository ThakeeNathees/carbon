#!python
import os
Import('env')

SOURCES = []

## source files
if env['platform'] == "osx":
	pass
elif env['platform'] in ('x11', 'linux'):
	pass
elif env['platform'] == "windows":
	## also using platform header guard in dlfcn.c
	## if someone include all source (src/*.cpp)
	SOURCES += [
		File('dlfcn-win32/dlfcn.c')
	]
	pass

env.LIBS['cb_core'] += SOURCES